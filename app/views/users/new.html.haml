%article.form-container
  %article.form-header
    %h3 Create an Account
  
  %article.form-fields
    = bootstrap_form_for @user do |f|
      %article.form-field
        = f.text_field :first_name
      %article.form-field
        = f.text_field :last_name
      %article.form-field
        = f.email_field :email
      %article.form-field
        = f.password_field :password
      %article.form-field
        = f.password_field :password_confirmation
      %article.form-field
        = f.submit 'Submit'